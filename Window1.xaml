<Window x:Class="Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
        Title="LibVLCSharp Player" Height="550" Width="1000">

    <Grid Margin="8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Zone vidéo -->
        <vlc:VideoView x:Name="VideoView"
                       Grid.Row="0" Grid.Column="0"
                       Background="Black"/>

        <!-- Contrôles -->
        <Border Grid.Row="1" Grid.Column="0" Padding="8" Margin="0,8,0,0" Background="#1a1a1a" CornerRadius="6">
            <StackPanel Orientation="Vertical">

                <!-- Ligne lecture/stop, vitesse -->
                <StackPanel Orientation="Horizontal" >

                    <!-- <ToggleButton x:Name="PlayPauseButton" Width="100" Height="32" Content="Lecture" Click="PlayPauseButton_Click"/> -->
                    <!-- <Button x:Name="StopButton" Width="80" Height="32" Content="Stop" Click="StopButton_Click"/> -->
                    <TextBlock Text="Vitesse :" Foreground="White" VerticalAlignment="Center"/>
                    <!-- <Slider x:Name="SpeedSlider" Width="200" Minimum="0.25" Maximum="3.0" Value="1.0" TickFrequency="0.25" IsSnapToTickEnabled="True" ValueChanged="SpeedSlider_ValueChanged"/>  -->
                    <TextBlock x:Name="SpeedValueText" Text="1.00x" Foreground="White" Margin="8,0,0,0"/>
                </StackPanel>

                <!-- Slider position -->
                <StackPanel Orientation="Horizontal" >
                    <TextBlock x:Name="CurrentTimeText" Text="00:00" Foreground="White" Width="60"/>
                    <!-- <Slider x:Name="PositionSlider" Minimum="0" Maximum="100" Width="600" ValueChanged="PositionSlider_ValueChanged"/> -->
                    <TextBlock x:Name="TotalTimeText" Text="00:00" Foreground="White" Width="60"/>
                </StackPanel>

                <!-- Sliders début et fin -->
                <StackPanel Orientation="Horizontal" >
                    <TextBlock Text="Début :" Foreground="White"/>
                    <!-- <Slider x:Name="StartLimitSlider" Minimum="0" Maximum="100" Width="200" ValueChanged="StartLimitSlider_ValueChanged"/> -->
                    <TextBlock x:Name="StartLimitText" Text="0%" Foreground="White" Width="50"/>
                    <TextBlock Text="Fin :" Foreground="White"/>
                    <!-- <Slider x:Name="EndLimitSlider" Minimum="0" Maximum="100" Width="200" ValueChanged="EndLimitSlider_ValueChanged"/> -->
                    <TextBlock x:Name="EndLimitText" Text="100%" Foreground="White" Width="50"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Liste des fichiers -->
        <Border Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" Background="#f0f0f0" Padding="8" Margin="8,0,0,0">
            <StackPanel>
                <TextBlock Text="Liste des vidéos" FontWeight="Bold" Margin="0,0,0,8"/>
                <!--  <ListView x:Name="FilesListView" Height="400" SelectionChanged="FilesListView_SelectionChanged"/> -->
            </StackPanel>
        </Border>
    </Grid>
</Window>
