<Window x:Class="WpfMediaPlayerRA.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfMediaPlayerRA" 
        xmlns:uc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
        mc:Ignorable="d"
        Title="Département d'informatique; cégep Limoilou (V1.0)" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <!-- Zone vidéo + contrôles -->
            <ColumnDefinition Width="200"/>
            <!-- Liste des fichiers -->
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <!-- Vidéo -->
            <RowDefinition Height="Auto"/>
            <!-- Contrôles -->
        </Grid.RowDefinitions>

        <!-- Zone vidéo -->
        <uc:VideoView x:Name="VideoView"
               Grid.Row="0"
               Background="Black"/>

        <!-- Barre de contrôles -->
        <Border Grid.Row="1" Padding="8" Margin="0,8,0,0" Background="#1a1a1a" CornerRadius="6">
            <StackPanel Orientation="Vertical" >

                <!-- Ligne de boutons (lecture/stop), (vitesse) -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,8" >
                    <!-- Toggle Play/Pause -->
                    <ToggleButton x:Name="btnPlayPause"
                            Width="100" Height="32"
                            Content="Lecture"
                            Click="btnPlayPause_Click" Checked="btnPlayPause_Checked">
                    </ToggleButton>

                    <!-- Stop -->
                    <Button x:Name="StopButton"
                      Width="80" Height="32"
                      Content="Stop"
                      Click="StopButton_Click"/>

                    <!-- Vitesse -->
                    <TextBlock Text="Vitesse :" Foreground="White" VerticalAlignment="Center"/>
                    <Slider x:Name="SpeedSlider"
                      Width="200"
                      Minimum="0.25" Maximum="3.0"
                      Value="1.0"
                      TickFrequency="0.25"
                      IsSnapToTickEnabled="True"
                      
                      ValueChanged="SpeedSlider_ValueChanged"/>
                    <TextBlock x:Name="SpeedValueText"
                         Text="1.00x"
                         Foreground="White"
                         Margin="8,0,0,0"
                         VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Ligne position (seek) -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" >
                    <TextBlock x:Name="CurrentTimeText" Text="00:00" Foreground="White" Width="60" TextAlignment="Right"/>
                    <Slider x:Name="PositionSlider"
                        Minimum="0" Maximum="1"
                        ValueChanged="PositionSlider_ValueChanged"
                        Width="480"
                      >

                        <!-- Gestion du drag pour éviter les conflits avec la mise à jour du timer -->
                        <Slider.Template>
                            <ControlTemplate TargetType="Slider">
                                <Grid>
                                    <Track x:Name="PART_Track">
                                        <Track.Thumb>
                                            <Thumb x:Name="Thumb"
                                             DragStarted="PositionSlider_DragStarted"
                                             DragCompleted="PositionSlider_DragCompleted"/>
                                        </Track.Thumb>
                                    </Track>
                                </Grid>
                            </ControlTemplate>
                        </Slider.Template>
                    </Slider>
                    <TextBlock x:Name="TotalTimeText" Text="00:00" Foreground="White" Width="60"/>
                </StackPanel>

                <!-- Sliders limites début et fin -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" >
                    <TextBlock Text="Début :" Foreground="White" Width="60" />
                    <Slider x:Name="StartLimitSlider" Minimum="0" Maximum="1" Width="480" ValueChanged="StartLimitSlider_ValueChanged"/>
                    <TextBlock x:Name="StartLimitText" Text="0%" Foreground="White" Width="50"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center"  >
                    <TextBlock Text="Fin :" Foreground="White" Width="60"/>
                    <Slider x:Name="EndLimitSlider" Minimum="0" Maximum="1" Width="480" ValueChanged="EndLimitSlider_ValueChanged"/>
                    <TextBlock x:Name="EndLimitText" Text="100%" Foreground="White" Width="50"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Liste des fichiers -->
        <Border Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" Background="#f0f0f0" Padding="8" Margin="8,0,0,0">
            <StackPanel>
                <TextBlock Text="Liste des vidéos" FontWeight="Bold" Margin="0,0,0,8"/>
                <ListView x:Name="FilesListView" Height="400" SelectionChanged="FilesListView_SelectionChanged" 
          ItemsSource="{Binding FilesListView}"
          DisplayMemberPath="Name"
/>
            </StackPanel>
        </Border>

    </Grid>
</Window>
